{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es5", "es6", "ES2018"],
    "experimentalDecorators": true,
    "emitDeclarationOnly": true,
    "emitDecoratorMetadata": true,
    "module": "commonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "composite": true,
    "outDir": "./dist", //informa qual a pasta, quando executar o build
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*"], // incluir todos os arquivos dentro do meu diret√≥rio src
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "files": true
  }
}